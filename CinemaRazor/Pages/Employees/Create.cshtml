@page
@model CinemaRazor.Pages.Employees.CreateModel

@{
    ViewData["Title"] = "Новый сотрудник";
}

<section class="page-header mb-4">
    <h1 class="page-title">Добавление сотрудника</h1>
    <p class="page-subtitle">Заполните основные данные и назначьте должность в кинотеатре.</p>
</section>

<div class="card">
    <div class="card-body p-4">
        <form method="post" class="row g-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12 col-md-6">
                <label asp-for="Employee.FullName" class="form-label">ФИО<span class="text-danger">*</span></label>
                <input asp-for="Employee.FullName" class="form-control" placeholder="Иванов Иван Иванович" />
                <span asp-validation-for="Employee.FullName" class="text-danger small"></span>
            </div>
            <div class="col-6 col-md-3">
                <label asp-for="Employee.Age" class="form-label">Возраст</label>
                <input asp-for="Employee.Age" class="form-control" type="number" min="16" max="100" />
                <span asp-validation-for="Employee.Age" class="text-danger small"></span>
            </div>
            <div class="col-6 col-md-3">
                <label asp-for="Employee.Gender" class="form-label">Пол</label>
                <input asp-for="Employee.Gender" class="form-control" placeholder="М / Ж" maxlength="10" />
                <span asp-validation-for="Employee.Gender" class="text-danger small"></span>
            </div>
            <div class="col-12">
                <label asp-for="Employee.Address" class="form-label">Адрес</label>
                <input asp-for="Employee.Address" class="form-control" placeholder="г. Москва, ул. Примерная, д. 1" />
                <span asp-validation-for="Employee.Address" class="text-danger small"></span>
            </div>
            <div class="col-12 col-md-6">
                <label asp-for="Employee.Phone" class="form-label">Телефон</label>
                <input asp-for="Employee.Phone" class="form-control" placeholder="+7 (999) 000-00-00" />
                <span asp-validation-for="Employee.Phone" class="text-danger small"></span>
            </div>
            <div class="col-12 col-md-6">
                <label asp-for="Employee.PositionId" class="form-label">Должность<span class="text-danger">*</span></label>
                <select asp-for="Employee.PositionId" class ="form-select" asp-items="ViewBag.PositionId">
                    <option value="">Выберите должность</option>
                </select>
                <span asp-validation-for="Employee.PositionId" class="text-danger small"></span>
            </div>
            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Сохранить</button>
                <a asp-page="Index" class="btn btn-outline-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
