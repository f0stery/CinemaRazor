@page
@model CinemaRazor.Pages.Employees.DeleteModel

@{
    ViewData["Title"] = "Удалить сотрудника";
}

<section class="page-header mb-4">
    <h1 class="page-title">Удалить сотрудника</h1>
    <p class="page-subtitle">Вы уверены, что хотите удалить этого сотрудника?</p>
</section>

<div class="delete-warning mb-4">
    <h3>Внимание!</h3>
    <p>Это действие необратимо. Удаление сотрудника приведет к удалению его из базы данных.</p>
</div>

<div class="details-container">
    <div class="details-header">
        <h2 class="details-title">@Model.Employee.FullName</h2>
        @if (Model.Employee.Position != null)
        {
            <p class="details-subtitle">
                <span class="badge rounded-pill text-bg-light border">@Model.Employee.Position.Title</span>
            </p>
        }
    </div>

    <div class="details-row">
        <div class="details-label">Возраст:</div>
        <div class="details-value">@(Model.Employee.Age > 0 ? $"{Model.Employee.Age} лет" : "Не указан")</div>
    </div>

    <div class="details-row">
        <div class="details-label">Пол:</div>
        <div class="details-value">@(string.IsNullOrWhiteSpace(Model.Employee.Gender) ? "Не указан" : Model.Employee.Gender)</div>
    </div>

    <div class="details-row">
        <div class="details-label">Адрес:</div>
        <div class="details-value">@(string.IsNullOrWhiteSpace(Model.Employee.Address) ? "Не указан" : Model.Employee.Address)</div>
    </div>

    <div class="details-row">
        <div class="details-label">Телефон:</div>
        <div class="details-value">@(string.IsNullOrWhiteSpace(Model.Employee.Phone) ? "Не указан" : Model.Employee.Phone)</div>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Employee.Id" />
        <div class="details-actions">
            <button type="submit" class="btn btn-danger">Удалить сотрудника</button>
            <a asp-page="./Index" class="btn btn-outline-secondary">Отмена</a>
        </div>
    </form>
</div>
