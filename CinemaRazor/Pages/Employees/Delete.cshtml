@page
@model CinemaRazor.Pages.Employees.DeleteModel

@{
    ViewData["Title"] = "Удаление сотрудника";
}

<h1>Удаление сотрудника</h1>

<h3>Вы уверены, что хотите удалить этого сотрудника?</h3>
<p class="text-danger"><strong>Это действие необратимо!</strong></p>

<hr />

<dl class="row">
    <dt class="col-sm-2">ФИО</dt>
    <dd class="col-sm-10">@Model.Employee.FullName</dd>

    <dt class="col-sm-2">Должность</dt>
    <dd class="col-sm-10">
        @(Model.Employee.Position != null ? Model.Employee.Position.Title : "Не указана")
    </dd>

    <dt class="col-sm-2">Возраст</dt>
    <dd class="col-sm-10">
        @(Model.Employee.Age > 0 ? $"{Model.Employee.Age} лет" : "Не указан")
    </dd>

    <dt class="col-sm-2">Пол</dt>
    <dd class="col-sm-10">
        @(string.IsNullOrWhiteSpace(Model.Employee.Gender) ? "Не указан" : Model.Employee.Gender)
    </dd>

    <dt class="col-sm-2">Адрес</dt>
    <dd class="col-sm-10">
        @(string.IsNullOrWhiteSpace(Model.Employee.Address) ? "Не указан" : Model.Employee.Address)
    </dd>

    <dt class="col-sm-2">Телефон</dt>
    <dd class="col-sm-10">
        @(string.IsNullOrWhiteSpace(Model.Employee.Phone) ? "Не указан" : Model.Employee.Phone)
    </dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Employee.Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-page="./Index" class="btn btn-secondary">Назад к списку</a>
</form>
