@page
@model CinemaRazor.Pages.Employees.DeleteModel

@{
    ViewData["Title"] = "Удаление сотрудника";
}

<section class="page-header mb-4">
    <h1 class="page-title">Удаление сотрудника</h1>
    <p class="page-subtitle">Подтвердите удаление карточки сотрудника из системы.</p>
</section>

@if (Model.Employee == null)
{
    <div class="alert alert-warning">
        Сотрудник не найден или уже удалён.
        <div class="mt-3">
            <a asp-page="Index" class="btn btn-outline-secondary">Вернуться к списку</a>
        </div>
    </div>
}
else
{
    <div class="surface-card surface-card--loose delete-warning">
        <h3>Вы уверены, что хотите удалить сотрудника?</h3>
        <p>После удаления карточка сотрудника будет удалена из системы без возможности восстановления.</p>
    </div>

    <div class="surface-card surface-card--loose details-container mb-4">
        <div class="details-header">
            <h2 class="details-title">@Model.Employee.FullName</h2>
            <p class="details-subtitle">Идентификатор: @Model.Employee.Id</p>
        </div>

        <div class="details-row">
            <div class="details-label">Должность</div>
            <div class="details-value">
                @(string.IsNullOrWhiteSpace(Model.Employee.Position?.Title)
                    ? "Не назначена"
                    : Model.Employee.Position.Title)
            </div>
        </div>

        <div class="details-row">
            <div class="details-label">Телефон</div>
            <div class="details-value">@(string.IsNullOrWhiteSpace(Model.Employee.Phone) ? "Не указан" : Model.Employee.Phone)</div>
        </div>

        <div class="details-row">
            <div class="details-label">Адрес</div>
            <div class="details-value">@(string.IsNullOrWhiteSpace(Model.Employee.Address) ? "Не указан" : Model.Employee.Address)</div>
        </div>
    </div>

    <form method="post" class="d-flex flex-wrap gap-2">
        <input type="hidden" asp-for="Employee.Id" />
        <button type="submit" class="btn btn-danger">Удалить сотрудника</button>
        <a asp-page="Index" class="btn btn-outline-secondary">Отмена</a>
    </form>
}
