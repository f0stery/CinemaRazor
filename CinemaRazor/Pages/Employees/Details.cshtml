@page
@model CinemaRazor.Pages.Employees.DetailsModel

@{
    ViewData["Title"] = "Сотрудник";
}

<section class="page-header mb-4">
    <h1 class="page-title">Карточка сотрудника</h1>
    <p class="page-subtitle">Просмотрите личные данные, назначенную должность и контакты сотрудника.</p>
</section>

@if (Model.Employee == null)
{
    <div class="alert alert-warning">
        Сотрудник не найден.
        <div class="mt-3">
            <a asp-page="Index" class="btn btn-outline-secondary">Вернуться к списку</a>
        </div>
    </div>
}
else
{
    <div class="surface-card surface-card--loose details-container">
        <div class="details-header">
            <h2 class="details-title">@Model.Employee.FullName</h2>
            <p class="details-subtitle">Идентификатор: @Model.Employee.Id</p>
        </div>

        <div class="details-row">
            <div class="details-label">Возраст</div>
            <div class="details-value">@((Model.Employee.Age > 0) ? $"{Model.Employee.Age} лет" : "Не указано")</div>
        </div>

        <div class="details-row">
            <div class="details-label">Пол</div>
            <div class="details-value">@(string.IsNullOrWhiteSpace(Model.Employee.Gender) ? "Не указано" : Model.Employee.Gender)</div>
        </div>

        <div class="details-row">
            <div class="details-label">Адрес</div>
            <div class="details-value">@(string.IsNullOrWhiteSpace(Model.Employee.Address) ? "Не указан" : Model.Employee.Address)</div>
        </div>

        <div class="details-row">
            <div class="details-label">Телефон</div>
            <div class="details-value">@(string.IsNullOrWhiteSpace(Model.Employee.Phone) ? "Не указан" : Model.Employee.Phone)</div>
        </div>

        <div class="details-row">
            <div class="details-label">Должность</div>
            <div class="details-value">
                @(string.IsNullOrWhiteSpace(Model.Employee.Position?.Title)
                    ? "Не назначена"
                    : Model.Employee.Position.Title)
            </div>
        </div>

        <div class="details-actions">
            <a asp-page="./Edit" asp-route-id="@Model.Employee.Id" class="btn btn-primary">Изменить</a>
            <a asp-page="./Delete" asp-route-id="@Model.Employee.Id" class="btn btn-outline-secondary">Удалить</a>
            <a asp-page="./Index" class="btn btn-outline-secondary">К списку сотрудников</a>
        </div>
    </div>
}
