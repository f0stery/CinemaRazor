@page
@model CinemaRazor.Pages.Employees.EditModel

@{
    ViewData["Title"] = "Редактирование сотрудника";
}

<section class="page-header mb-4">
    <h1 class="page-title">Редактирование сотрудника</h1>
    <p class="page-subtitle">Обновите контактные данные, адрес и назначенную должность сотрудника.</p>
</section>

<div class="surface-card surface-card--loose form-container">
    <form method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Employee.Id" />

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Employee.FullName" class="form-label">
                        <span class="text-danger">*</span> ФИО
                    </label>
                    <input asp-for="Employee.FullName" class="form-control" />
                    <span asp-validation-for="Employee.FullName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Employee.Age" class="form-label">Возраст</label>
                    <input asp-for="Employee.Age" class="form-control" type="number" min="16" max="100" />
                    <span asp-validation-for="Employee.Age" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Employee.Gender" class="form-label">Пол</label>
                    <input asp-for="Employee.Gender" class="form-control" maxlength="10" />
                    <span asp-validation-for="Employee.Gender" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Employee.Address" class="form-label">Адрес</label>
            <input asp-for="Employee.Address" class="form-control" />
            <span asp-validation-for="Employee.Address" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Employee.Phone" class="form-label">Телефон</label>
                    <input asp-for="Employee.Phone" class="form-control" />
                    <span asp-validation-for="Employee.Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Employee.PositionId" class="form-label">
                        <span class="text-danger">*</span> Должность
                    </label>
                    <select asp-for="Employee.PositionId" class="form-select" asp-items="ViewBag.PositionId">
                        <option value="">Выберите должность</option>
                    </select>
                    <span asp-validation-for="Employee.PositionId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Сохранить изменения</button>
            <a asp-page="./Index" class="btn btn-outline-secondary">Отмена</a>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
