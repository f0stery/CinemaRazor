@page
@model CinemaRazor.Pages.Employees.IndexModel

@{
    ViewData["Title"] = "Сотрудники";
}

<h1>Сотрудники</h1>

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
    <span class="text-muted">Всего сотрудников: @Model.Employee.Count</span>
    <a asp-page="Create" class="btn btn-primary">Добавить сотрудника</a>
</div>

@if (Model.Employee.Any())
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>ФИО</th>
                    <th>Телефон</th>
                    <th>Должность</th>
                    <th class="text-end">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Employee)
                {
                    <tr>
                        <td>
                            <div class="fw-semibold">@item.FullName</div>
                            <div class="text-muted small">
                                @if (!string.IsNullOrWhiteSpace(item.Gender))
                                {
                                    <span>@item.Gender</span>
                                }
                                @if (item.Age > 0)
                                {
                                    @if (!string.IsNullOrWhiteSpace(item.Gender))
                                    {
                                        <span>, </span>
                                    }
                                    <span>@item.Age лет</span>
                                }
                            </div>
                            @if (!string.IsNullOrWhiteSpace(item.Address))
                            {
                                <div class="text-muted small">@item.Address</div>
                            }
                        </td>
                        <td>@(string.IsNullOrWhiteSpace(item.Phone) ? "—" : item.Phone)</td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(item.PositionTitle))
                            {
                                <span class="badge bg-light text-dark border">@item.PositionTitle</span>
                            }
                            else
                            {
                                <span class="text-muted">Не указана</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group btn-group-sm" role="group">
                                <a class="btn btn-outline-secondary" asp-page="./Details" asp-route-id="@item.Id">Просмотр</a>
                                <a class="btn btn-outline-secondary" asp-page="./Edit" asp-route-id="@item.Id">Изменить</a>
                                <a class="btn btn-outline-secondary" asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        Пока нет сотрудников.
        <a asp-page="Create" class="alert-link">Добавьте первого сотрудника</a>.
    </div>
}
