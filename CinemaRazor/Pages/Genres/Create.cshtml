@page
@model CinemaRazor.Pages.Genres.CreateModel

@{
    ViewData["Title"] = "Добавить жанр";
}

<h1>Добавить жанр</h1>

<hr />

<form method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="Genre.Name" class="form-label">Название жанра</label>
        <input asp-for="Genre.Name" class="form-control" placeholder="Например, Триллер" />
        <span asp-validation-for="Genre.Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Genre.Description" class="form-label">Описание</label>
        <textarea asp-for="Genre.Description" class="form-control" rows="4" placeholder="Пара предложений о жанре"></textarea>
        <span asp-validation-for="Genre.Description" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <input type="submit" value="Создать жанр" class="btn btn-primary" />
        <a asp-page="Index" class="btn btn-secondary">Назад к списку</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
