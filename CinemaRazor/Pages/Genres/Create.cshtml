@page
@model CinemaRazor.Pages.Genres.CreateModel

@{
    ViewData["Title"] = "Добавить жанр";
}

<section class="page-header mb-4">
    <h1 class="page-title">Новый жанр</h1>
    <p class="page-subtitle">Добавьте жанр, чтобы легче подбирать фильмы по настроению.</p>
</section>

<div class="card">
    <div class="card-body p-4">
        <form method="post" class="row g-4">
            <div asp-validation-summary="All" class="text-danger small"></div>

            <div class="col-12">
                <label asp-for="Genre.Name" class="form-label">Название жанра<span class="text-danger">*</span></label>
                <input asp-for="Genre.Name" class="form-control" placeholder="Например, Триллер" />
                <span asp-validation-for="Genre.Name" class="text-danger small"></span>
            </div>

            <div class="col-12">
                <label asp-for="Genre.Description" class="form-label">Описание</label>
                <textarea asp-for="Genre.Description" class="form-control" rows="4" placeholder="Пара предложений о жанре"></textarea>
                <span asp-validation-for="Genre.Description" class="text-danger small"></span>
            </div>

            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Создать</button>
                <a asp-page="Index" class="btn btn-outline-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
