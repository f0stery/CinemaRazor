@page
@model CinemaRazor.Pages.Genres.CreateModel

@{
    ViewData["Title"] = "Добавить жанр";
}

<section class="page-header mb-4">
    <h1 class="page-title">Новый жанр</h1>
    <p class="page-subtitle">Добавьте жанр, чтобы легче подбирать фильмы по настроению.</p>
</section>

<div class="form-container">
    <form method="post">
        <div asp-validation-summary="All" class="alert alert-danger"></div>

        <div class="form-group">
            <label asp-for="Genre.Name" class="form-label">
                <span class="text-danger">*</span> Название жанра
            </label>
            <input asp-for="Genre.Name" class="form-control" placeholder="Например, Триллер" />
            <span asp-validation-for="Genre.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Genre.Description" class="form-label">Описание</label>
            <textarea asp-for="Genre.Description" class="form-control" rows="4" placeholder="Пара предложений о жанре"></textarea>
            <span asp-validation-for="Genre.Description" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Создать жанр</button>
            <a asp-page="Index" class="btn btn-outline-secondary">Отмена</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
