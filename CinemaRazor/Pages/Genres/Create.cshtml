@page
@model CinemaRazor.Pages.Genres.CreateModel

@{
    ViewData["Title"] = "Добавить жанр";
}

<h1>Добавить жанр</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Genre.Name" class="control-label"></label>
                <input asp-for="Genre.Name" class="form-control" placeholder="Введите название жанра" />
                <span asp-validation-for="Genre.Name" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Genre.Description" class="control-label"></label>
                <textarea asp-for="Genre.Description" class="form-control" placeholder="Краткое описание"></textarea>
                <span asp-validation-for="Genre.Description" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Создать" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Назад</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
