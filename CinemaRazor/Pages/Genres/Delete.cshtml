@page
@model CinemaRazor.Pages.Genres.DeleteModel

@{
    ViewData["Title"] = "Удаление жанра";
}

<section class="page-header mb-4">
    <h1 class="page-title">Удаление жанра</h1>
    <p class="page-subtitle">Проверьте информацию перед удалением — действие нельзя отменить.</p>
</section>

<div class="card border-danger">
    <div class="card-body p-4">
        <dl class="row mb-4">
            <dt class="col-sm-3 text-muted">Название</dt>
            <dd class="col-sm-9 fw-semibold">@Model.Genre.Name</dd>
            <dt class="col-sm-3 text-muted">Описание</dt>
            <dd class="col-sm-9 text-muted">@(!string.IsNullOrWhiteSpace(Model.Genre.Description) ? Model.Genre.Description : "Описание отсутствует")</dd>
        </dl>

        <form method="post" class="d-flex gap-2">
            <input type="hidden" asp-for="Genre.Id" />
            <button type="submit" class="btn btn-danger">Удалить</button>
            <a asp-page="Index" class="btn btn-outline-secondary">Отмена</a>
        </form>
    </div>
</div>
