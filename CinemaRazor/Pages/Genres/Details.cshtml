@page
@model CinemaRazor.Pages.Genres.DetailsModel

@{
    ViewData["Title"] = "Просмотр жанра";
}

<section class="page-header mb-4">
    <h1 class="page-title">@Model.Genre.Name</h1>
    <p class="page-subtitle">Описание жанра и связанные материалы.</p>
</section>

<div class="card">
    <div class="card-body p-4">
        <dl class="row mb-0">
            <dt class="col-sm-3 text-muted">Название</dt>
            <dd class="col-sm-9 fw-semibold">@Model.Genre.Name</dd>
            <dt class="col-sm-3 text-muted">Описание</dt>
            <dd class="col-sm-9 text-muted">@(!string.IsNullOrWhiteSpace(Model.Genre.Description) ? Model.Genre.Description : "Описание отсутствует")</dd>
        </dl>
    </div>
</div>

<div class="d-flex gap-2 mt-4">
    <a asp-page="Edit" asp-route-id="@Model.Genre.Id" class="btn btn-outline-secondary">Изменить</a>
    <a asp-page="Index" class="btn btn-outline-secondary">Назад к списку</a>
</div>
