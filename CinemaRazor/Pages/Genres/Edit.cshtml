@page
@model CinemaRazor.Pages.Genres.EditModel

@{
    ViewData["Title"] = "Редактирование жанра";
}

<h1>Редактирование жанра</h1>
<hr />

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Genre.Id" />

    <div class="form-group">
        <label asp-for="Genre.Name" class="control-label">Название жанра</label>
        <input asp-for="Genre.Name" class="form-control" />
        <span asp-validation-for="Genre.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Genre.Description" class="control-label">Описание</label>
        <textarea asp-for="Genre.Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Genre.Description" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a asp-page="Index" class="btn btn-secondary">Назад к списку</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
