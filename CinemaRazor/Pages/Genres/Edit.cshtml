@page
@model CinemaRazor.Pages.Genres.EditModel

@{
    ViewData["Title"] = "Редактирование жанра";
}

<section class="page-header mb-4">
    <h1 class="page-title">Редактирование жанра</h1>
    <p class="page-subtitle">Обновите название или описание жанра, чтобы удерживать актуальность каталога.</p>
</section>

<div class="form-container">
    <form method="post">
        <div asp-validation-summary="All" class="alert alert-danger"></div>
        <input type="hidden" asp-for="Genre.Id" />

        <div class="form-group">
            <label asp-for="Genre.Name" class="form-label">
                <span class="text-danger">*</span> Название жанра
            </label>
            <input asp-for="Genre.Name" class="form-control" />
            <span asp-validation-for="Genre.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Genre.Description" class="form-label">Описание</label>
            <textarea asp-for="Genre.Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Genre.Description" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Сохранить изменения</button>
            <a asp-page="Index" class="btn btn-outline-secondary">Отмена</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
