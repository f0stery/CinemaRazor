@page
@model CinemaRazor.Pages.Genres.IndexModel

@{
    ViewData["Title"] = "Жанры";
}

<section class="page-header mb-4">
    <h1 class="page-title">Справочник жанров</h1>
    <p class="page-subtitle">Структурируйте фильмы по жанрам, добавляйте описания и поддерживайте единый стиль каталогизации.</p>
</section>

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
    <span class="text-muted">Всего жанров: @Model.Genre.Count</span>
    <a asp-page="Create" class="btn btn-primary">Добавить жанр</a>
</div>

@if (Model.Genre.Any())
{
    <div class="surface-card surface-card--flush table-container">
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Описание</th>
                        <th class="text-end">Действия</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Genre)
                {
                    <tr>
                        <td class="fw-semibold">@item.Name</td>
                        <td class="text-muted">
                            @(string.IsNullOrWhiteSpace(item.Description) ? "Описание отсутствует" : item.Description)
                        </td>
                        <td class="text-end">
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Просмотр</a>
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Изменить</a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-secondary">Удалить</a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="surface-card surface-card--loose support-card">
        <h2>Жанры ещё не добавлены</h2>
        <p>Создайте хотя бы один жанр, чтобы классифицировать фильмы и упростить поиск.</p>
        <a asp-page="Create" class="btn btn-primary">Добавить первый жанр</a>
    </div>
}
