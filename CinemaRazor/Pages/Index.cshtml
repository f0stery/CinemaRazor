@page
@model IndexModel
@{
    ViewData["Title"] = "Панель администратора";
}

<section class="surface-card surface-card--loose page-header page-header--elevated mb-5">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center gap-3">
        <div>
            <span class="eyebrow text-primary fw-semibold d-block mb-2">Панель управления</span>
            <h1 class="page-title mb-2">Администрирование кинотеатра</h1>
            <p class="page-subtitle text-muted mb-0">
                Управляйте репертуаром, расписанием, персоналом и продажами билетов из единой панели.
                Все данные кинотеатра доступны для просмотра, добавления, редактирования и удаления.
            </p>
        </div>
        <div class="d-flex flex-wrap gap-2">
            <a class="btn btn-primary px-4 py-2" asp-page="/Sessions/Create">Запланировать сеанс</a>
            <a class="btn btn-outline-primary px-4 py-2" asp-page="/Movies/Create">Добавить фильм</a>
            <a class="btn btn-outline-secondary px-4 py-2" asp-page="/Tickets/Index">Отчёт по билетам</a>
        </div>
    </div>
</section>

<section class="mb-5">
    <div class="row g-4">
        <div class="col-12 col-md-6 col-xl-4">
            <div class="surface-card surface-card--compact dashboard-card gradient-card-primary text-center p-4 rounded-4 shadow-sm">
                <div class="card-label text-muted small mb-1">Фильмов в базе</div>
                <div class="card-value display-6 fw-bold">@Model.Stats.Movies</div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-xl-4">
            <div class="surface-card surface-card--compact dashboard-card gradient-card-quinary text-center p-4 rounded-4 shadow-sm">
                <div class="card-label text-muted small mb-1">Жанров</div>
                <div class="card-value display-6 fw-bold">@Model.Stats.Genres</div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-xl-4">
            <div class="surface-card surface-card--compact dashboard-card gradient-card-secondary text-center p-4 rounded-4 shadow-sm">
                <div class="card-label text-muted small mb-1">Активных сеансов</div>
                <div class="card-value display-6 fw-bold">@Model.Stats.Sessions</div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-xl-4">
            <div class="surface-card surface-card--compact dashboard-card gradient-card-senary text-center p-4 rounded-4 shadow-sm">
                <div class="card-label text-muted small mb-1">Проданных билетов</div>
                <div class="card-value display-6 fw-bold">@Model.Stats.Tickets</div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-xl-4">
            <div class="surface-card surface-card--compact dashboard-card gradient-card-tertiary text-center p-4 rounded-4 shadow-sm">
                <div class="card-label text-muted small mb-1">Сотрудников</div>
                <div class="card-value display-6 fw-bold">@Model.Stats.Employees</div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-xl-4">
            <div class="surface-card surface-card--compact dashboard-card gradient-card-quaternary text-center p-4 rounded-4 shadow-sm">
                <div class="card-label text-muted small mb-1">Должностей</div>
                <div class="card-value display-6 fw-bold">@Model.Stats.Positions</div>
            </div>
        </div>
    </div>
</section>

<section class="mb-5">
    <div class="row g-4">
        <div class="col-12 col-lg-6">
            <div class="surface-card surface-card--loose management-card h-100">
                <h2 class="h4 mb-2">Репертуар и расписание</h2>
                <p class="text-muted mb-3">
                    Добавляйте фильмы, описания, жанры и планируйте будущие сеансы с указанием времени и стоимости.
                </p>
                <div class="d-flex flex-wrap gap-2">
                    <a class="btn btn-outline-primary" asp-page="/Movies/Create">Новый фильм</a>
                    <a class="btn btn-outline-secondary" asp-page="/Movies/Index">Каталог фильмов</a>
                    <a class="btn btn-outline-primary" asp-page="/Sessions/Create">Новый сеанс</a>
                    <a class="btn btn-outline-secondary" asp-page="/Sessions/Index">Расписание</a>
                    <a class="btn btn-outline-secondary" asp-page="/Genres/Index">Справочник жанров</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-6">
            <div class="surface-card surface-card--loose management-card h-100">
                <h2 class="h4 mb-2">Команда и продажи</h2>
                <p class="text-muted mb-3">
                    Управляйте сотрудниками, должностями и контролируйте реализацию билетов по каждому фильму.
                </p>
                <div class="d-flex flex-wrap gap-2">
                    <a class="btn btn-outline-primary" asp-page="/Employees/Create">Добавить сотрудника</a>
                    <a class="btn btn-outline-secondary" asp-page="/Employees/Index">Все сотрудники</a>
                    <a class="btn btn-outline-primary" asp-page="/Tickets/Create">Продать билет</a>
                    <a class="btn btn-outline-secondary" asp-page="/Tickets/Index">Отчёт по билетам</a>
                    <a class="btn btn-outline-secondary" asp-page="/Positions/Index">Должности и требования</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="row g-4">
        <div class="col-12 col-xl-6">
            <div class="surface-card surface-card--flush table-container h-100">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="h5 mb-0">Ближайшие сеансы</h2>
                    <a asp-page="/Sessions/Create" class="btn btn-sm btn-primary">Запланировать</a>
                </div>
                @if (Model.UpcomingSessions.Any())
                {
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead>
                                <tr>
                                    <th>Фильм</th>
                                    <th>Начало</th>
                                    <th>Окончание</th>
                                    <th>Цена</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var session in Model.UpcomingSessions)
                                {
                                    <tr>
                                        <td>
                                            <a asp-page="/Sessions/Details" asp-route-id="@session.SessionId">@session.MovieTitle</a>
                                        </td>
                                        <td>@session.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>
                                            @{
                                                DateTime? endTime = session.EndTime > DateTime.MinValue && session.EndTime >= session.StartTime
                                                ? session.EndTime
                                                : (session.DurationMinutes > 0
                                                ? session.StartTime.AddMinutes(session.DurationMinutes)
                                                : (DateTime?)null);
                                            }
                                            @(endTime.HasValue? endTime.Value.ToString("dd.MM.yyyy HH:mm") : "—")
                                        </td>
                                        <td>@session.Price.ToString("0") BYN</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">Нет запланированных сеансов. Создайте новый сеанс, чтобы он появился в расписании.</p>
                }
            </div>
        </div>
        <div class="col-12 col-xl-6">
            <div class="surface-card surface-card--flush table-container h-100">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="h5 mb-0">Продажи по фильмам</h2>
                    <a asp-page="/Tickets/Index" class="btn btn-sm btn-primary">Смотреть отчёт</a>
                </div>
                @if (Model.TicketSales.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var sale in Model.TicketSales)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>@sale.MovieTitle</span>
                                <span class="badge bg-primary rounded-pill">@sale.TicketsSold</span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted mb-0">Продажи билетов пока не зафиксированы.</p>
                }
            </div>
        </div>
    </div>
</section>
