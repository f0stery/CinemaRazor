@page
@model CinemaRazor.Pages.Movies.CreateModel

@{
    ViewData["Title"] = "Добавить фильм";
}

<h1>Добавить фильм</h1>

@if (!Model.HasGenres)
{
    <div class="alert alert-warning">
        <h5 class="alert-heading">Необходимо добавить жанр</h5>
        <p class="mb-2">Перед созданием фильма добавьте хотя бы один жанр.</p>
        <a asp-page="/Genres/Create" class="btn btn-outline-primary">Добавить жанр</a>
        <a asp-page="Index" class="btn btn-secondary ms-2">Назад</a>
    </div>
}
else
{
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Movie.Title" class="control-label"></label>
                    <input asp-for="Movie.Title" class="form-control" />
                    <span asp-validation-for="Movie.Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Movie.Description" class="control-label"></label>
                    <textarea asp-for="Movie.Description" class="form-control"></textarea>
                    <span asp-validation-for="Movie.Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Movie.ProducerCompany" class="control-label"></label>
                    <input asp-for="Movie.ProducerCompany" class="form-control" />
                    <span asp-validation-for="Movie.ProducerCompany" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Movie.ProductionCountry" class="control-label"></label>
                    <input asp-for="Movie.ProductionCountry" class="form-control" />
                    <span asp-validation-for="Movie.ProductionCountry" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Movie.Actors" class="control-label"></label>
                    <textarea asp-for="Movie.Actors" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Movie.Actors" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Movie.AgeRating" class="control-label"></label>
                    <input asp-for="Movie.AgeRating" class="form-control" />
                    <span asp-validation-for="Movie.AgeRating" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Movie.ReleaseDate" class="control-label"></label>
                    <input asp-for="Movie.ReleaseDate" type="date" class="form-control" />
                    <span asp-validation-for="Movie.ReleaseDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Movie.DurationMinutes" class="control-label"></label>
                    <input asp-for="Movie.DurationMinutes" class="form-control" />
                    <span asp-validation-for="Movie.DurationMinutes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Movie.GenreId" class="control-label"></label>
                    <select asp-for="Movie.GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>
                    <span asp-validation-for="Movie.GenreId" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Создать" class="btn btn-primary" />
                    <a asp-page="Index" class="btn btn-secondary">Назад</a>
                </div>
            </form>
        </div>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
