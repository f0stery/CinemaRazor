@page
@model CinemaRazor.Pages.Movies.DeleteModel

@{
    ViewData["Title"] = "Удаление фильма";
}

<section class="page-header mb-4">
    <h1 class="page-title">Удаление фильма</h1>
    <p class="page-subtitle">Подтвердите удаление фильма и связанных данных из каталога.</p>
</section>

@if (Model.Movie == null)
{
    <div class="alert alert-warning">
        Фильм не найден или уже был удалён.
        <div class="mt-3">
            <a asp-page="Index" class="btn btn-outline-secondary">Вернуться к списку фильмов</a>
        </div>
    </div>
}
else
{
    <div class="surface-card surface-card--loose delete-warning">
        <h3>Вы уверены, что хотите удалить фильм?</h3>
        <p>Удаление фильма приведёт к удалению всех связанных сеансов и билетов. Это действие нельзя отменить.</p>
    </div>

    <div class="surface-card surface-card--loose details-container mb-4">
        <div class="details-header">
            <h2 class="details-title">@Model.Movie.Title</h2>
            <p class="details-subtitle">
                Жанр: @(Model.Movie.Genre?.Name ?? "Не указан")
            </p>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Movie.Description))
        {
            <div class="details-row">
                <div class="details-label">Описание</div>
                <div class="details-value">@Model.Movie.Description</div>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.Movie.ProducerCompany))
        {
            <div class="details-row">
                <div class="details-label">Кинокомпания</div>
                <div class="details-value">@Model.Movie.ProducerCompany</div>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.Movie.ProductionCountry))
        {
            <div class="details-row">
                <div class="details-label">Страна</div>
                <div class="details-value">@Model.Movie.ProductionCountry</div>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.Movie.Actors))
        {
            <div class="details-row">
                <div class="details-label">Актёрский состав</div>
                <div class="details-value">@Model.Movie.Actors</div>
            </div>
        }

        <div class="details-row">
            <div class="details-label">Возрастной рейтинг</div>
            <div class="details-value">@(Model.Movie.AgeRating > 0 ? $"{Model.Movie.AgeRating}+" : "Не указан")</div>
        </div>

        <div class="details-row">
            <div class="details-label">Дата выхода</div>
            <div class="details-value">
                @(Model.Movie.ReleaseDate != DateTime.MinValue
                    ? Model.Movie.ReleaseDate.ToString("dd.MM.yyyy")
                    : "Не указана")
            </div>
        </div>

        <div class="details-row">
            <div class="details-label">Продолжительность</div>
            <div class="details-value">
                @(Model.Movie.DurationMinutes > 0
                    ? $"{Model.Movie.DurationMinutes} мин"
                    : "Не указана")
            </div>
        </div>
    </div>

    <form method="post" class="d-flex flex-wrap gap-2">
        <input type="hidden" asp-for="Movie.Id" />
        <button type="submit" class="btn btn-danger">Удалить фильм</button>
        <a asp-page="Index" class="btn btn-outline-secondary">Отмена</a>
    </form>
}
