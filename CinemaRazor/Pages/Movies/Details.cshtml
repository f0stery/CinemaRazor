@page
@model CinemaRazor.Pages.Movies.DetailsModel

@{
    ViewData["Title"] = "Детали фильма";
}

<section class="page-header mb-4">
    <h1 class="page-title">Детали фильма</h1>
    <p class="page-subtitle">Просмотр подробной информации о фильме</p>
</section>

<div class="surface-card surface-card--loose details-container">
    <div class="details-header">
        <h2 class="details-title">@Model.Movie.Title</h2>
    </div>

    <div class="details-row">
        <div class="details-label">Жанр:</div>
        <div class="details-value">
            @if (Model.Movie.Genre != null)
            {
                @Model.Movie.Genre.Name
            }
            else
            {
                <span class="text-muted">Не указан</span>
            }
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.Movie.Description))
    {
        <div class="details-row">
            <div class="details-label">Описание:</div>
            <div class="details-value">@Model.Movie.Description</div>
        </div>
    }

    @if (!string.IsNullOrWhiteSpace(Model.Movie.ProducerCompany))
    {
        <div class="details-row">
            <div class="details-label">Кинокомпания:</div>
            <div class="details-value">@Model.Movie.ProducerCompany</div>
        </div>
    }

    @if (!string.IsNullOrWhiteSpace(Model.Movie.ProductionCountry))
    {
        <div class="details-row">
            <div class="details-label">Страна:</div>
            <div class="details-value">@Model.Movie.ProductionCountry</div>
        </div>
    }

    @if (!string.IsNullOrWhiteSpace(Model.Movie.Actors))
    {
        <div class="details-row">
            <div class="details-label">Актёры:</div>
            <div class="details-value">@Model.Movie.Actors</div>
        </div>
    }

    <div class="details-row">
        <div class="details-label">Возрастной рейтинг:</div>
        <div class="details-value">
            @(Model.Movie.AgeRating > 0 ? $"{Model.Movie.AgeRating}+" : "Не указан")
        </div>
    </div>

    <div class="details-row">
        <div class="details-label">Дата выхода:</div>
        <div class="details-value">@Model.Movie.ReleaseDate.ToString("dd.MM.yyyy")</div>
    </div>

    <div class="details-row">
        <div class="details-label">Продолжительность:</div>
        <div class="details-value">@Model.Movie.DurationMinutes минут</div>
    </div>

    <div class="details-actions">
        <a asp-page="./Edit" asp-route-id="@Model.Movie.Id" class="btn btn-primary">Изменить</a>
        <a asp-page="./Delete" asp-route-id="@Model.Movie.Id" class="btn btn-outline-secondary">Удалить</a>
        <a asp-page="./Index" class="btn btn-outline-secondary">Назад к списку</a>
    </div>
</div>
