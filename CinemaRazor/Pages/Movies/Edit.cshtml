@page
@model CinemaRazor.Pages.Movies.EditModel

@{
    ViewData["Title"] = "Редактирование фильма";
}

<section class="page-header mb-4">
    <h1 class="page-title">Редактирование фильма</h1>
    <p class="page-subtitle">Обновите сведения о фильме, чтобы поддерживать каталог в актуальном состоянии.</p>
</section>

<div class="surface-card surface-card--loose form-container">
    <form method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Movie.Id" />

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <div class="form-group">
            <label asp-for="Movie.Title" class="form-label">
                <span class="text-danger">*</span> Название фильма
            </label>
            <input asp-for="Movie.Title" class="form-control" />
            <span asp-validation-for="Movie.Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Movie.Description" class="form-label">Описание</label>
            <textarea asp-for="Movie.Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Movie.Description" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Movie.ProducerCompany" class="form-label">Кинокомпания</label>
                    <input asp-for="Movie.ProducerCompany" class="form-control" />
                    <span asp-validation-for="Movie.ProducerCompany" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Movie.ProductionCountry" class="form-label">Страна производства</label>
                    <input asp-for="Movie.ProductionCountry" class="form-control" />
                    <span asp-validation-for="Movie.ProductionCountry" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Movie.Actors" class="form-label">Актёрский состав</label>
            <textarea asp-for="Movie.Actors" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Movie.Actors" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Movie.AgeRating" class="form-label">Возрастной рейтинг</label>
                    <input asp-for="Movie.AgeRating" class="form-control" type="number" min="0" />
                    <span asp-validation-for="Movie.AgeRating" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Movie.DurationMinutes" class="form-label">Продолжительность (мин)</label>
                    <input asp-for="Movie.DurationMinutes" class="form-control" type="number" min="1" />
                    <span asp-validation-for="Movie.DurationMinutes" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Movie.ReleaseDate" class="form-label">Дата выхода</label>
                    <input asp-for="Movie.ReleaseDate" class="form-control" type="date" />
                    <span asp-validation-for="Movie.ReleaseDate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Movie.GenreId" class="form-label">
                <span class="text-danger">*</span> Жанр
            </label>
            <select asp-for="Movie.GenreId" class="form-select" asp-items="ViewBag.GenreId">
                <option value="">Выберите жанр</option>
            </select>
            <span asp-validation-for="Movie.GenreId" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Сохранить изменения</button>
            <a asp-page="./Index" class="btn btn-outline-secondary">Отмена</a>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
