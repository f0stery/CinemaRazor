@page
@model CinemaRazor.Pages.Positions.CreateModel

@{
    ViewData["Title"] = "Новая должность";
}

<section class="page-header mb-4">
    <h1 class="page-title">Создание должности</h1>
    <p class="page-subtitle">Определите обязанности роли, требования к кандидату и уровень заработной платы.</p>
</section>

<div class="form-container">
    <form method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Position.Title" class="form-label">
                        <span class="text-danger">*</span> Название должности
                    </label>
                    <input asp-for="Position.Title" class="form-control" placeholder="Администратор зала" />
                    <span asp-validation-for="Position.Title" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Position.Salary" class="form-label">Оклад</label>
                    <div class="input-group">
                        <span class="input-group-text">BYN</span>
                        <input asp-for="Position.Salary" class="form-control" type="number" inputmode="decimal" step="0.01" min="0" placeholder="1200" />
                    </div>
                    <span asp-validation-for="Position.Salary" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Position.Responsibilities" class="form-label">
                <span class="text-danger">*</span> Обязанности
            </label>
            <textarea asp-for="Position.Responsibilities" class="form-control" rows="4" placeholder="Перечислите основные задачи"></textarea>
            <span asp-validation-for="Position.Responsibilities" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Position.Requirements" class="form-label">
                <span class="text-danger">*</span> Требования
            </label>
            <textarea asp-for="Position.Requirements" class="form-control" rows="4" placeholder="Опыт, навыки, образование"></textarea>
            <span asp-validation-for="Position.Requirements" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Создать должность</button>
            <a asp-page="Index" class="btn btn-outline-secondary">Отмена</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
