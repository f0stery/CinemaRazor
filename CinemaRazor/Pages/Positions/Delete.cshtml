@page
@model CinemaRazor.Pages.Positions.DeleteModel

@{
    ViewData["Title"] = "Удаление должности";
}

<section class="page-header mb-4">
    <h1 class="page-title">Удаление должности</h1>
    <p class="page-subtitle">Подтвердите, что хотите удалить должность из справочника.</p>
</section>

@if (Model.Position == null)
{
    <div class="alert alert-warning">
        Должность не найдена или уже была удалена.
        <div class="mt-3">
            <a asp-page="Index" class="btn btn-outline-secondary">Вернуться к списку</a>
        </div>
    </div>
}
else
{
    <div class="surface-card surface-card--loose delete-warning">
        <h3>Вы уверены, что хотите удалить должность?</h3>
        <p>Проверьте, что ни один сотрудник не назначен на эту роль.</p>
    </div>

    <div class="surface-card surface-card--loose details-container mb-4">
        <div class="details-header">
            <h2 class="details-title">@Model.Position.Title</h2>
        </div>

        <div class="details-row">
            <div class="details-label">Оклад</div>
            <div class="details-value">@Model.Position.Salary.ToString("0") BYN</div>
        </div>

        <div class="details-row">
            <div class="details-label">Обязанности</div>
            <div class="details-value">@Model.Position.Responsibilities</div>
        </div>

        <div class="details-row">
            <div class="details-label">Требования</div>
            <div class="details-value">@Model.Position.Requirements</div>
        </div>
    </div>

    <form method="post" class="d-flex flex-wrap gap-2">
        <input type="hidden" asp-for="Position.Id" />
        <button type="submit" class="btn btn-danger">Удалить должность</button>
        <a asp-page="Index" class="btn btn-outline-secondary">Отмена</a>
    </form>
}
