@page
@model CinemaRazor.Pages.Positions.DetailsModel

@{
    ViewData["Title"] = "Должность";
}

<section class="page-header mb-4">
    <h1 class="page-title">Карточка должности</h1>
    <p class="page-subtitle">Просмотрите обязанности роли, требования и установленный оклад.</p>
</section>

@if (Model.Position == null)
{
    <div class="alert alert-warning">
        Должность не найдена.
        <div class="mt-3">
            <a asp-page="Index" class="btn btn-outline-secondary">Вернуться к списку</a>
        </div>
    </div>
}
else
{
    <div class="surface-card surface-card--loose details-container">
        <div class="details-header">
            <h2 class="details-title">@Model.Position.Title</h2>
        </div>

        <div class="details-row">
            <div class="details-label">Оклад</div>
            <div class="details-value">@Model.Position.Salary.ToString("0") BYN</div>
        </div>

        <div class="details-row">
            <div class="details-label">Обязанности</div>
            <div class="details-value">@Model.Position.Responsibilities</div>
        </div>

        <div class="details-row">
            <div class="details-label">Требования</div>
            <div class="details-value">@Model.Position.Requirements</div>
        </div>

        <div class="details-actions">
            <a asp-page="./Edit" asp-route-id="@Model.Position.Id" class="btn btn-primary">Изменить</a>
            <a asp-page="./Delete" asp-route-id="@Model.Position.Id" class="btn btn-outline-secondary">Удалить</a>
            <a asp-page="./Index" class="btn btn-outline-secondary">К списку должностей</a>
        </div>
    </div>
}
