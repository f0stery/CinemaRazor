@page
@model CinemaRazor.Pages.Positions.EditModel

@{
    ViewData["Title"] = "Редактирование должности";
}

<section class="page-header mb-4">
    <h1 class="page-title">Редактирование должности</h1>
    <p class="page-subtitle">Актуализируйте зарплату, требования и обязанности.</p>
</section>

<div class="card">
    <div class="card-body p-4">
        <form method="post" class="row g-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Position.Id" />
            <div class="col-12 col-md-6">
                <label asp-for="Position.Title" class="form-label">Название должности<span class="text-danger">*</span></label>
                <input asp-for="Position.Title" class="form-control" />
                <span asp-validation-for="Position.Title" class="text-danger small"></span>
            </div>
            <div class="col-12 col-md-6">
                <label asp-for="Position.Salary" class="form-label">Оклад</label>
                <div class="input-group">
                    <span class="input-group-text">BYN</span>
                    <input asp-for="Position.Salary" class="form-control" type="number" step="1" min="0" />
                </div>
                <span asp-validation-for="Position.Salary" class="text-danger small"></span>
            </div>
            <div class="col-12">
                <label asp-for="Position.Responsibilities" class="form-label">Обязанности<span class="text-danger">*</span></label>
                <textarea asp-for="Position.Responsibilities" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Position.Responsibilities" class="text-danger small"></span>
            </div>
            <div class="col-12">
                <label asp-for="Position.Requirements" class="form-label">Требования<span class="text-danger">*</span></label>
                <textarea asp-for="Position.Requirements" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Position.Requirements" class="text-danger small"></span>
            </div>
            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Сохранить изменения</button>
                <a asp-page="./Index" class="btn btn-outline-secondary">Назад к списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
