@page
@model CinemaRazor.Pages.Seats.CreateModel

@{
    ViewData["Title"] = "Добавить место";
}

<h1>Добавить место</h1>

<h4>Место</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Seat.RowNumber" class="control-label"></label>
                <input asp-for="Seat.RowNumber" class="form-control" />
                <span asp-validation-for="Seat.RowNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Seat.SeatNumber" class="control-label"></label>
                <input asp-for="Seat.SeatNumber" class="form-control" />
                <span asp-validation-for="Seat.SeatNumber" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад к списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
