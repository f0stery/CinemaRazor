@page
@model CinemaRazor.Pages.Seats.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактирование места</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Seat.Id" />

             <div class="form-group">
                 <label asp-for="Seat.SessionId" class="control-label"></label>
                 <select asp-for="Seat.SessionId" class="form-control" asp-items="Model.SessionOptions"></select>
                 <span asp-validation-for="Seat.SessionId" class="text-danger"></span>
             </div>

            <div class="form-group">
                <label asp-for="Seat.RowNumber" class="control-label"></label>
                <input asp-for="Seat.RowNumber" class="form-control" />
                <span asp-validation-for="Seat.RowNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Seat.SeatNumber" class="control-label"></label>
                <input asp-for="Seat.SeatNumber" class="form-control" />
                <span asp-validation-for="Seat.SeatNumber" class="text-danger"></span>
            </div>

             <div class="form-group form-check mt-2">
                 <input asp-for="Seat.IsOccupied" class="form-check-input" />
                 <label asp-for="Seat.IsOccupied" class="form-check-label"></label>
                 <span asp-validation-for="Seat.IsOccupied" class="text-danger"></span>
             </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад к списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
