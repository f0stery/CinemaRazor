@page
@model CinemaRazor.Pages.Seats.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактирование места</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Seat.Id" />

            <div class="form-group">
                <label asp-for="Seat.RowNumber" class="control-label"></label>
                <input asp-for="Seat.RowNumber" class="form-control" />
                <span asp-validation-for="Seat.RowNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Seat.SeatNumber" class="control-label"></label>
                <input asp-for="Seat.SeatNumber" class="form-control" />
                <span asp-validation-for="Seat.SeatNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад к списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
