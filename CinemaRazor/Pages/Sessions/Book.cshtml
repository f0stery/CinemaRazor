    ViewData["Title"] = "–ë—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ –º–µ—Å—Ç";
}

<h1>üé´ –ë—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ –º–µ—Å—Ç</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row mb-4">
    <div class="col-md-6">
        <form method="get" class="mb-3">
            <div class="form-group">
                <label for="SessionId">–í—ã–±–µ—Ä–∏—Ç–µ —Å–µ–∞–Ω—Å:</label>
                <select name="SessionId" id="SessionId" class="form-control" onchange="this.form.submit()">
                    <option value="">-- –í—ã–±–µ—Ä–∏—Ç–µ —Å–µ–∞–Ω—Å --</option>
                    @foreach (var session in Model.SessionOptions)
                    {
                        <option value="@session.Value" selected="@(session.Selected ? "selected" : null)">@session.Text</option>
                    }
                </select>
            </div>
        </form>
    </div>
</div>

@if (Model.Session != null)
{
    <div class="card mb-4">
        <div class="card-header">
            <h4>@Model.Session.Movie?.Title</h4>
            <p class="mb-0">
                <strong>–ù–∞—á–∞–ª–æ:</strong> @Model.Session.StartTime.ToString("dd.MM.yyyy HH:mm")<br>
                <strong>–ö–æ–Ω–µ—Ü:</strong> @Model.Session.EndTime.ToString("dd.MM.yyyy HH:mm")<br>
                <strong>–¶–µ–Ω–∞:</strong> @Model.Session.Price.ToString("0.00") ‚ÇΩ
            </p>
        </div>
        <div class="card-body">
            <form method="post" id="seatBookingForm">
                <input type="hidden" name="SessionId" value="@Model.Session.Id" />
                
                <div class="text-center mb-3">
                    <div class="d-inline-block bg-dark text-white px-3 py-1 rounded">
                        –≠–ö–†–ê–ù
                    </div>
                </div>

                <div class="row justify-content-center mb-3">
                    <div class="col-auto">
                        <div class="d-flex gap-2 mb-2">
                            <div class="d-flex align-items-center">
                                <div class="seat-legend available"></div>
                                <span class="ms-2">–°–≤–æ–±–æ–¥–Ω–æ</span>
                            </div>
                            <div class="d-flex align-items-center ms-3">
                                <div class="seat-legend occupied"></div>
                                <span class="ms-2">–ó–∞–Ω—è—Ç–æ</span>
                            </div>
                            <div class="d-flex align-items-center ms-3">
                                <div class="seat-legend selected"></div>
                                <span class="ms-2">–í—ã–±—Ä–∞–Ω–æ</span>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.SeatLayout.Any())
                {
                    var maxRow = Model.SeatLayout.Max(s => s.RowNumber);
                    var maxSeat = Model.SeatLayout.Max(s => s.SeatNumber);
                    
                    <div class="table-responsive">
                        <table class="table table-borderless seat-map">
                            <thead>
                                <tr>
                                    <th style="width: 60px;">–†—è–¥</th>
                                    <th colspan="@maxSeat"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int row = 1; row <= maxRow; row++)
                                {
                                    var rowSeats = Model.SeatLayout.Where(s => s.RowNumber == row).OrderBy(s => s.SeatNumber).ToList();
                                    <tr>
                                        <td class="row-label"><strong>@row</strong></td>
                                        @for (int seatNum = 1; seatNum <= maxSeat; seatNum++)
                                        {
                                            var seat = rowSeats.FirstOrDefault(s => s.SeatNumber == seatNum);
                                            if (seat != null)
                                            {
                                                <td class="seat-cell">
                                                    @if (seat.IsOccupied)
                                                    {
                                                        <div class="seat occupied" title="–†—è–¥ @seat.RowNumber, –ú–µ—Å—Ç–æ @seat.SeatNumber - –ó–∞–Ω—è—Ç–æ">
                                                            <span class="seat-number">@seat.SeatNumber</span>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <label class="seat available" title="–†—è–¥ @seat.RowNumber, –ú–µ—Å—Ç–æ @seat.SeatNumber - –°–≤–æ–±–æ–¥–Ω–æ">
                                                            <input type="radio" name="SelectedSeatId" value="@seat.SeatId" required />
                                                            <span class="seat-number">@seat.SeatNumber</span>
                                                        </label>
                                                    }
                                                </td>
                                            }
                                            else
                                            {
                                                <td class="seat-cell empty"></td>
                                            }
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="text-center mt-4">
                        <button type="button" class="btn btn-primary btn-lg" id="bookButton" disabled onclick="bookSelectedSeat()">
                            –ó–∞–±—Ä–æ–Ω–∏—Ä–æ–≤–∞—Ç—å –º–µ—Å—Ç–æ
                        </button>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        –ú–µ—Å—Ç–∞ –¥–ª—è —ç—Ç–æ–≥–æ —Å–µ–∞–Ω—Å–∞ –µ—â–µ –Ω–µ —Å–æ–∑–¥–∞–Ω—ã.
                    </div>
                }
            </form>
        </div>
    </div>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const seatRadios = document.querySelectorAll('input[name="SelectedSeatId"]');
            const bookButton = document.getElementById('bookButton');
            const bookingForm = document.getElementById('seatBookingForm');

            const clearSelection = () => {
                document.querySelectorAll('.seat.available.selected').forEach(seat => {
                    seat.classList.remove('selected');
                });
            };

            const applySelection = (radio) => {
                if (!radio) {
                    return;
                }

                if (bookButton) {
                    bookButton.disabled = false;
                }

                clearSelection();

                const wrapper = radio.closest('.seat.available');
                if (wrapper) {
                    wrapper.classList.add('selected');
                }
            };

            seatRadios.forEach(radio => {
                radio.addEventListener('change', () => applySelection(radio));

                if (radio.checked) {
                    applySelection(radio);
                }
            });

            window.bookSelectedSeat = function () {
                if (!bookingForm) {
                    return;
                }

                const selectedSeat = bookingForm.querySelector('input[name="SelectedSeatId"]:checked');
                if (!selectedSeat) {
                    alert('–í—ã–±–µ—Ä–∏—Ç–µ —Å–≤–æ–±–æ–¥–Ω–æ–µ –º–µ—Å—Ç–æ –ø–µ—Ä–µ–¥ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ–º.');
                    return;
                }

                bookingForm.submit();
            };
        });
    </script>
    <style>
        .seat-map {
            margin: 0 auto;
        }
        
        .seat-cell {
            padding: 5px;
            text-align: center;
        }
        
        .row-label {
            font-weight: bold;
            text-align: right;
            vertical-align: middle;
            padding-right: 15px;
        }
        
        .seat {
            display: inline-block;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            cursor: pointer;
            transition: all 0.2s;
            position: relative;
            border: 2px solid #333;
        }
        
        .seat input[type="radio"] {
            display: none;
        }
        
        .seat-number {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 12px;
            font-weight: bold;
            color: white;
        }
        
        .seat.available {
            background-color: #28a745;
            border-color: #1e7e34;
        }
        
        .seat.available:hover {
            background-color: #218838;
            transform: scale(1.1);
            box-shadow: 0 0 10px rgba(40, 167, 69, 0.5);
        }
        
        .seat.selected {
            background-color: #0d6efd;
            border-color: #0a58ca;
            box-shadow: 0 0 14px rgba(13, 110, 253, 0.45);
        }

        .seat.selected .seat-number {
            color: #fff;
        }

        .seat.available input[type="radio"]:checked + .seat-number {
            color: #fff;
        }
        
        .seat.occupied {
            background-color: #dc3545;
            border-color: #c82333;
            cursor: not-allowed;
        }
        
        .seat-legend {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            border: 2px solid #333;
        }
        
        .seat-legend.available {
            background-color: #28a745;
            border-color: #1e7e34;
        }
        
        .seat-legend.occupied {
            background-color: #dc3545;
            border-color: #c82333;
        }
        
        .seat-legend.selected {
            background-color: #007bff;
            border-color: #0056b3;
        }
        
        .empty {
            width: 40px;
        }
    </style>
}
