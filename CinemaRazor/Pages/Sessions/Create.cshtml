@page
@model CinemaRazor.Pages.Sessions.CreateModel

@{
    ViewData["Title"] = "Создание сеанса";
    var movieDurationsJson = System.Text.Json.JsonSerializer.Serialize(Model.MovieDurations);
}

<section class="page-header mb-4">
    <h1 class="page-title">Создание сеанса</h1>
    <p class="page-subtitle">
        Выберите фильм, назначьте время начала — система автоматически рассчитает время окончания.
    </p>
</section>

<div class="form-container">
    <form method="post" class="p-4 surface-card surface-card--loose rounded-4 shadow-sm">
        @* Показываем alert только если есть ошибки *@
        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
        {
            <div asp-validation-summary="All" class="alert alert-danger mb-4"></div>
        }

        <div class="row g-4">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Session.MovieId" class="form-label fw-semibold">
                        <span class="text-danger">*</span> Фильм
                    </label>
                    <select asp-for="Session.MovieId" class="form-select" asp-items="Model.MovieOptions">
                        <option value="">Выберите фильм</option>
                    </select>
                    <span asp-validation-for="Session.MovieId" class="text-danger small"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Session.Price" class="form-label fw-semibold">Цена билета</label>
                    <div class="input-group">
                        <span class="input-group-text">BYN</span>
                        <input asp-for="Session.Price" class="form-control" type="number" min="0" step="1" />
                    </div>
                    <span asp-validation-for="Session.Price" class="text-danger small"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Session.StartTime" class="form-label fw-semibold">
                        <span class="text-danger">*</span> Дата и время начала
                    </label>
                    <input asp-for="Session.StartTime" class="form-control" type="datetime-local" />
                    <span asp-validation-for="Session.StartTime" class="text-danger small"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label fw-semibold">Предполагаемое завершение</label>
                    <input id="calculated-end-time" class="form-control" type="text" readonly placeholder="Выберите фильм и время" />
                    <small class="text-muted">Рассчитывается автоматически по длительности фильма.</small>
                </div>
            </div>
        </div>

        <div class="form-actions d-flex justify-content-end gap-2 mt-4">
            <button type="submit" class="btn btn-primary px-4">Создать сеанс</button>
            <a asp-page="Index" class="btn btn-outline-secondary px-4">Отмена</a>
        </div>
    </form>
</div>

<style>
    .form-container {
        max-width: 800px;
        margin: 0 auto;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        (function () {
            const durations = @Html.Raw(movieDurationsJson);
            const movieSelect = document.getElementById('Session_MovieId');
            const startInput = document.getElementById('Session_StartTime');
            const endPreview = document.getElementById('calculated-end-time');

            const formatDateTime = (date) => new Intl.DateTimeFormat('ru-RU', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit'
            }).format(date);

            const updateEndTime = () => {
                const movieId = movieSelect?.value;
                const duration = durations[movieId];
                const startValue = startInput?.value;

                if (!duration || !startValue) {
                    endPreview.value = '';
                    return;
                }

                const startDate = new Date(startValue);
                if (Number.isNaN(startDate.getTime())) {
                    endPreview.value = '';
                    return;
                }

                const endDate = new Date(startDate.getTime() + duration * 60000);
                endPreview.value = formatDateTime(endDate);
            };

            movieSelect?.addEventListener('change', updateEndTime);
            startInput?.addEventListener('change', updateEndTime);
            startInput?.addEventListener('input', updateEndTime);

            updateEndTime();
        })();
    </script>
}
