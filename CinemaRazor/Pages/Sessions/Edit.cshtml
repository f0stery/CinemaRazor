@page
@model CinemaRazor.Pages.Sessions.EditModel

@{
    ViewData["Title"] = "Edit Session";
}

<h1>Edit Session</h1>

<h4>Session</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Session.Id" />

            <div class="form-group">
                <label asp-for="Session.MovieId" class="control-label"></label>
                <select asp-for="Session.MovieId" class="form-control" asp-items="ViewBag.MovieId"></select>
                <span asp-validation-for="Session.MovieId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Session.StartTime" class="control-label"></label>
                <input asp-for="Session.StartTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="Session.StartTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Session.Price" class="control-label"></label>
                <div class="input-group">
                    <span class="input-group-text">BYN</span>
                    <input asp-for="Session.Price" class="form-control" type="number" min="0" step="1" />
                </div>
                <span asp-validation-for="Session.Price" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
