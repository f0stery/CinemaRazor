@page
@model CinemaRazor.Pages.Sessions.IndexModel

@{
    ViewData["Title"] = "Сеансы";
}

<section class="page-header mb-4">
    <h1 class="page-title">Расписание сеансов</h1>
    <p class="page-subtitle">Планируйте показы фильмов и устанавливайте время и стоимость билетов.</p>
</section>

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
    <span class="text-muted">Всего сеансов: @Model.Session.Count</span>
    <a asp-page="Create" class="btn btn-primary">Создать новый сеанс</a>
</div>

@if (Model.Session.Any())
{
    <div class="table-container">
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Фильм</th>
                        <th>Зал</th>
                        <th>Время начала</th>
                        <th>Цена</th>
                        <th class="text-end">Действия</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Session)
                {
                    <tr>
                        <td class="fw-semibold">@(item.Movie?.Title ?? "—")</td>
                        <td>Основной зал</td>
                        <td>@item.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@item.Price.ToString("0") BYN</td>
                        <td class="text-end">
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Просмотр</a>
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Изменить</a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-secondary">Удалить</a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="support-card">
        <h2>Нет запланированных сеансов</h2>
        <p>Создайте первый сеанс, чтобы начать формировать расписание кинотеатра.</p>
        <a asp-page="Create" class="btn btn-primary">Добавить первый сеанс</a>
    </div>
}
