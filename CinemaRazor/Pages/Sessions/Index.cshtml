@page
@model CinemaRazor.Pages.Sessions.IndexModel

@{
    ViewData["Title"] = "Сеансы";
}

<h1>Список сеансов</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Создать новый сеанс</a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Session[0].Movie)</th>
            <th>Зал</th>
            <th>@Html.DisplayNameFor(model => model.Session[0].StartTime)</th>
            <th>@Html.DisplayNameFor(model => model.Session[0].Price)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Session)
        {
            <tr>
                <td>@item.Movie?.Title</td>
                <td>Основной зал</td>
                <td>@item.StartTime.ToString("g")</td>
                <td>@item.Price.ToString("0.00") ₽</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактировать</a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Детали</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
