@page
@model CinemaRazor.Pages.Tickets.CreateModel

@{
    ViewData["Title"] = "Продажа билета";
}

<section class="page-header mb-4">
    <h1 class="page-title">Продажа билета</h1>
    <p class="page-subtitle">Выберите сеанс, отметьте свободное место и подтвердите продажу билета.</p>
</section>

<div class="card">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-12 col-md-8">
                <label asp-for="SessionId" class="form-label">Сеанс</label>
                <select asp-for="SessionId" class="form-select" asp-items="Model.SessionOptions" onchange="this.form.submit()">
                    <option value="">Выберите сеанс</option>
                </select>
            </div>
            <div class="col-12 col-md-4 text-md-end">
                <a asp-page="Index" class="btn btn-outline-secondary mt-3 mt-md-0">Перейти к списку билетов</a>
            </div>
        </form>
    </div>
</div>

@if (!Model.HasSessions)
{
    <div class="alert alert-info mt-4">
        Нет доступных сеансов. Создайте сеанс, прежде чем оформлять продажу билета.
    </div>
}
else if (Model.Session != null)
{
    <div class="card mt-4">
        <div class="card-header d-flex flex-wrap justify-content-between align-items-center gap-2">
            <div>
                <h4 class="mb-1">@Model.Session.Movie?.Title</h4>
                <div class="text-muted small">
                    Начало: @Model.Session.StartTime.ToString("dd.MM.yyyy HH:mm")<br />
                    Конец: @Model.Session.EndTime.ToString("dd.MM.yyyy HH:mm")
                </div>
            </div>
            <div class="text-end">
                <div class="fw-semibold">Цена билета</div>
                <div class="fs-4">@Model.Session.Price.ToString("0.00") ₽</div>
            </div>
        </div>
        <div class="card-body">
            <form method="post" id="sellTicketForm" class="d-flex flex-column gap-4">
                @Html.AntiForgeryToken()
                <input type="hidden" name="SessionId" value="@Model.Session.Id" />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="row justify-content-center">
                    <div class="col-auto">
                        <div class="d-flex gap-3 mb-3">
                            <span class="d-flex align-items-center gap-2"><span class="seat-legend available"></span>Свободно</span>
                            <span class="d-flex align-items-center gap-2"><span class="seat-legend occupied"></span>Занято</span>
                            <span class="d-flex align-items-center gap-2"><span class="seat-legend selected"></span>Выбрано</span>
                        </div>
                    </div>
                </div>

                @if (Model.SeatLayout.Any())
                {
                    var maxRow = Model.SeatLayout.Max(s => s.RowNumber);
                    var maxSeat = Model.SeatLayout.Max(s => s.SeatNumber);

                    <div class="table-responsive">
                        <table class="table table-borderless seat-map">
                            <thead>
                                <tr>
                                    <th style="width: 70px;">Ряд</th>
                                    <th colspan="@maxSeat" class="text-center">Экран</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int row = 1; row <= maxRow; row++)
                                {
                                    var rowSeats = Model.SeatLayout.Where(s => s.RowNumber == row).OrderBy(s => s.SeatNumber).ToList();
                                    <tr>
                                        <td class="row-label"><strong>@row</strong></td>
                                        @for (int seatNumber = 1; seatNumber <= maxSeat; seatNumber++)
                                        {
                                            var seat = rowSeats.FirstOrDefault(s => s.SeatNumber == seatNumber);
                                            if (seat != null)
                                            {
                                                <td class="seat-cell">
                                                    @if (seat.IsOccupied)
                                                    {
                                                        <div class="seat occupied" title="Ряд @seat.RowNumber, Место @seat.SeatNumber - Занято">
                                                            <span class="seat-number">@seat.SeatNumber</span>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <label class="seat available" title="Ряд @seat.RowNumber, Место @seat.SeatNumber - Свободно">
                                                            <input type="radio" name="SelectedSeatId" value="@seat.SeatId" @(Model.SelectedSeatId == seat.SeatId ? "checked" : null) />
                                                            <span class="seat-number">@seat.SeatNumber</span>
                                                        </label>
                                                    }
                                                </td>
                                            }
                                            else
                                            {
                                                <td class="seat-cell empty"></td>
                                            }
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="text-center">
                        <button type="button" class="btn btn-primary btn-lg" id="sellTicketButton" disabled>Продать билет</button>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        Для этого сеанса ещё не настроены места. Настройте схему зала перед продажей билетов.
                    </div>
                }
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-light border mt-4">
        Выберите сеанс, чтобы увидеть доступные места.
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sellForm = document.getElementById('sellTicketForm');
            if (!sellForm) {
                return;
            }

            const radioSeats = sellForm.querySelectorAll('input[type="radio"][name="SelectedSeatId"]');
            const sellButton = document.getElementById('sellTicketButton');

            const clearSelection = () => {
                sellForm.querySelectorAll('.seat.available.selected').forEach(item => item.classList.remove('selected'));
            };

            const applySelection = (radio) => {
                if (!radio) {
                    return;
                }

                sellButton.disabled = false;

                clearSelection();

                const wrapper = radio.closest('.seat.available');
                if (wrapper) {
                    wrapper.classList.add('selected');
                }
            };

            radioSeats.forEach(radio => {
                radio.addEventListener('change', () => applySelection(radio));

                if (radio.checked) {
                    applySelection(radio);
                }
            });

            sellButton?.addEventListener('click', () => {
                const selectedSeat = sellForm.querySelector('input[type="radio"][name="SelectedSeatId"]:checked');
                if (!selectedSeat) {
                    alert('Выберите свободное место перед подтверждением продажи.');
                    return;
                }

                sellForm.submit();
            });
        });
    </script>

    <style>
        .seat-map {
            margin: 0 auto;
        }

        .seat-cell {
            padding: 6px;
            text-align: center;
        }

        .row-label {
            font-weight: 600;
            text-align: right;
            vertical-align: middle;
        }

        .seat {
            display: inline-block;
            width: 42px;
            height: 42px;
            border-radius: 50%;
            cursor: pointer;
            position: relative;
            border: 2px solid #333;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .seat input[type="radio"] {
            display: none;
        }

        .seat-number {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 12px;
            font-weight: 600;
            color: #fff;
        }

        .seat.available {
            background-color: #198754;
            border-color: #146c43;
        }

        .seat.available:hover {
            transform: scale(1.05);
            box-shadow: 0 0 10px rgba(25, 135, 84, 0.45);
        }

        .seat.available.selected {
            background-color: #0d6efd;
            border-color: #0a58ca;
            box-shadow: 0 0 14px rgba(13, 110, 253, 0.45);
        }

        .seat.occupied {
            background-color: #dc3545;
            border-color: #bb2d3b;
            cursor: not-allowed;
        }

        .seat-legend {
            display: inline-block;
            width: 28px;
            height: 28px;
            border-radius: 50%;
            border: 2px solid #333;
        }

        .seat-legend.available {
            background-color: #198754;
            border-color: #146c43;
        }

        .seat-legend.occupied {
            background-color: #dc3545;
            border-color: #bb2d3b;
        }

        .seat-legend.selected {
            background-color: #0d6efd;
            border-color: #0a58ca;
        }

        .seat-legend + span {
            font-size: 0.95rem;
        }

        .empty {
            width: 42px;
        }
    </style>
}
