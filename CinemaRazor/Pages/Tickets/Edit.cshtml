@page
@model CinemaRazor.Pages.Tickets.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ticket.Id" />
            <div class="form-group">
                <label asp-for="Ticket.SessionId" class="control-label"></label>
                <select asp-for="Ticket.SessionId" class="form-control" asp-items="Model.SessionOptions"></select>
                <span asp-validation-for="Ticket.SessionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.SeatId" class="control-label"></label>
                <select asp-for="Ticket.SeatId" class="form-control" asp-items="Model.SeatOptions"></select>
                <span asp-validation-for="Ticket.SeatId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.PurchaseDate" class="control-label"></label>
                <input asp-for="Ticket.PurchaseDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="Ticket.PurchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.Price" class="control-label"></label>
                <input asp-for="Ticket.Price" class="form-control" />
                <span asp-validation-for="Ticket.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
