@page
@model CinemaRazor.Pages.Tickets.IndexModel

@{
    ViewData["Title"] = "Билеты";
}

<section class="page-header mb-4">
    <h1 class="page-title">Билеты</h1>
    <p class="page-subtitle">Отслеживайте продажи и доступные места по каждому сеансу.</p>
</section>

@if (TempData["SuccessMessage"] is string successMessage)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @successMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
    </div>
}

<div class="surface-card surface-card--loose table-container mb-4">
    <form method="get" class="row g-3 align-items-end">
        <div class="col-12 col-md-6">
            <label asp-for="SelectedMovieId" class="form-label">Фильм</label>
            <select asp-for="SelectedMovieId" class="form-select" asp-items="Model.MovieOptions">
                <option value="">Все фильмы</option>
            </select>
        </div>
        <div class="col-12 col-md-6 d-flex gap-2">
            <button type="submit" class="btn btn-primary flex-grow-1">Показать</button>
            <a asp-page="Index" class="btn btn-outline-secondary">Сбросить</a>
            <a asp-page="Create" class="btn btn-outline-primary" title="Оформить новый билет">Продать билет</a>
        </div>
    </form>
</div>

@if (Model.Overview != null)
{
    <div class="surface-card surface-card--loose table-container mb-4">
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-3">
            <div>
                <h4 class="mb-1">@Model.Overview.Title</h4>
                @if (!string.IsNullOrEmpty(Model.Overview.Subtitle))
                {
                    <div class="text-muted">@Model.Overview.Subtitle</div>
                }
            </div>
            <span class="badge bg-light text-dark">Сеансов: @Model.Overview.SessionsCount</span>
        </div>

        <div class="row g-3">
            <div class="col-12 col-md-4">
                <div class="surface-card surface-card--compact dashboard-card gradient-card-primary h-100">
                    <div class="card-label">Продано билетов</div>
                    <div class="card-value">@Model.Overview.TicketsSold</div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="surface-card surface-card--compact dashboard-card gradient-card-quaternary h-100">
                    <div class="card-label">Свободные места</div>
                    <div class="card-value">@Model.Overview.SeatsAvailable</div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="surface-card surface-card--compact dashboard-card gradient-card-tertiary h-100">
                    <div class="card-label">Выручка</div>
                    <div class="card-value">@Model.Overview.Revenue.ToString("0")</div>
                    <span class="text-muted small">BYN</span>
                </div>
            </div>
        </div>
    </div>
}

<div class="surface-card surface-card--flush table-container mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0">Сводка по сеансам</h5>
    </div>

    @if (Model.SessionSummaries.Any())
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                      <tr>
                          <th>Сеанс</th>
                          <th class="text-nowrap">Цена, BYN</th>
                          <th class="text-nowrap">Продано</th>
                          <th class="text-nowrap">Свободно</th>
                          <th class="text-nowrap">Выручка, BYN</th>
                          <th class="text-nowrap text-end">Действия</th>
                      </tr>
                </thead>
                <tbody>
                @foreach (var summary in Model.SessionSummaries)
                {
                    var isActive = Model.SelectedSessionId.HasValue && summary.SessionId == Model.SelectedSessionId.Value;
                      <tr class="@(isActive ? "table-primary" : string.Empty)">
                          <td>
                              <div class="fw-semibold">@summary.MovieTitle</div>
                              <div class="text-muted small">@summary.StartTime.ToString("dd.MM.yyyy HH:mm")</div>
                          </td>
                          <td>@summary.Price.ToString("0")</td>
                          <td>@summary.TicketsSold</td>
                          <td>@summary.SeatsAvailable</td>
                          <td>@summary.Revenue.ToString("0")</td>
                          <td class="text-end">
                              <div class="btn-group btn-group-sm" role="group">
                                  <a asp-page="Index"
                                     asp-route-SelectedSessionId="@summary.SessionId"
                                     asp-route-SelectedMovieId="@Model.SelectedMovieId"
                                     class="btn btn-outline-secondary">Показать билеты</a>
                                  <a asp-page="Create"
                                     asp-route-MovieId="@summary.MovieId"
                                     asp-route-SessionId="@summary.SessionId"
                                     class="btn btn-outline-primary">Продать билет</a>
                              </div>
                          </td>
                      </tr>
                  }
                  @{ 
                      var totalTickets = Model.SessionSummaries.Sum(s => s.TicketsSold);
                      var totalSeats = Model.SessionSummaries.Sum(s => s.SeatsAvailable);
                      var totalRevenue = Model.SessionSummaries.Sum(s => s.Revenue);
                  }
                  @if (Model.SessionSummaries.Count > 1)
                  {
                      <tr class="table-light fw-semibold">
                          <td>Итого по выбранным сеансам</td>
                          <td></td>
                          <td>@totalTickets</td>
                          <td>@totalSeats</td>
                          <td>@totalRevenue.ToString("0")</td>
                          <td></td>
                      </tr>
                  }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted mb-0">Нет сеансов, удовлетворяющих условиям фильтра.</p>
    }
</div>

<div class="surface-card surface-card--flush table-container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0">Билеты</h5>
    </div>

    @if (!Model.Tickets.Any())
    {
        <p class="text-muted mb-0">По выбранным условиям билеты не найдены.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Фильм</th>
                        <th>Сеанс</th>
                        <th>Место</th>
                        <th>Дата покупки</th>
                          <th>Цена, BYN</th>
                        <th class="text-end">Действия</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Tickets)
                {
                    <tr>
                        <td class="fw-semibold">@item.Session.Movie.Title</td>
                        <td>@item.Session.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                        <td class="text-muted">Ряд @item.Seat.RowNumber, место @item.Seat.SeatNumber</td>
                        <td class="text-muted small">@item.PurchaseDate.ToString("dd.MM.yyyy HH:mm")</td>
                          <td>@item.Price.ToString("0")</td>
                        <td class="text-end">
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Просмотр</a>
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Изменить</a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-secondary">Удалить</a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>
